<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div class="alert alert-danger" id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p><%= f.label :title %><br><%= f.text_field :title, class: 'form-control' %></p>
  <p><%= f.label :body %><br><%= f.text_area :body, class: 'form-control', id: 'edit' %></p>
  <p><%= f.label :category %><br><%= f.text_field :category %></p>
  <div class="well">
    <h4>Choose a featured image:</h4>  
    <%= f.file_field :featured_image %>
  </div>
  <%= f.hidden_field :user_id %>  
  <p><%= f.submit :submit, class: 'btn btn-primary btn-large save', value: "Save" %></p>
<% end %>
